<%= form_with(model: [@list, @task], local: true, class: "ui form") do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, placeholder: "Task Name" %>
  </div>
  <div class="field">
    <%= f.label :date_due %>
    <%= f.date_field :date_due, required: true, placeholder: "Due Date" %>
  </div>
  <div class="field">
    <%= f.label :date_done %>
    <%= f.date_field :date_done, placeholder: "Date Completed" %>
  </div>
   <div class="field">
    <%= f.label :priority %>
    <%= f.select :priority, ['1. High', '2. Medium', '3. Low'], placeholder: "Priority" %>
  </div>
  <%= f.submit class: "ui blue button" %>
<% end %>