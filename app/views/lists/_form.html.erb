<%= form_with(model: [@board, @list], local: true, class: "ui form") do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, placeholder: "List Name" %>
  </div>
  <div class="field">
    <%= f.label :priority %>
    <%= f.select :priority, ['1. High', '2. Medium', '3. Low'], placeholder: "Priority" %>
  </div>
  <%= f.submit class: "ui blue button" %>
<% end %>